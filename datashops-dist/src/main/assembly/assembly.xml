<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>content</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${project.build.finalName}-datashops-bin</baseDirectory>

    <fileSets>

        <fileSet>
            <directory>${basedir}/../datashops-server/src/main/resources</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
                <include>**/*.json</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../datashops-protocol/src/main/resources</directory>
            <includes>
                <include>**/*.proto</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../datashops-api/src/main/resources</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
                <include>**/*.json</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../bin</directory>
            <includes>
                <include>start.sh</include>
                <include>stop.sh</include>
                <include>datashops-daemon.sh</include>
            </includes>
            <outputDirectory>./bin</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../datashops-ui/dist</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>./ui</outputDirectory>
        </fileSet>

    </fileSets>

    <dependencySets>
        <!-- 项目的依赖包 -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory><!-- 依赖jar包放置目录-->
            <useProjectArtifact>true</useProjectArtifact> <!-- 当前项目构件是否包含在这个依赖集合里 -->
        </dependencySet>
    </dependencySets>
</assembly>
